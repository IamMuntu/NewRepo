<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPass">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/backgroud">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="RECOVER PASSWORD"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold"></TextView>

        <ImageView
            android:id="@+id/cordinates"
            android:layout_width="48dp"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shapestyle"
            app:srcCompat="@drawable/location" />

        <ImageView
            android:id="@+id/bk"
            android:layout_width="48dp"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/shapestyle"
            app:srcCompat="@drawable/back" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/img"
        android:layout_width="77dp"
        android:layout_height="91dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:background="#37474f"
        app:srcCompat="@drawable/key"></ImageView>

    <EditText
        android:id="@+id/editrecov"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_below="@+id/img"
        android:layout_marginStart="5dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/edit_text_style"
        android:drawableStart="@drawable/email"
        android:drawableLeft="@drawable/email"
        android:drawablePadding="4dp"
        android:hint="Input Email Used For SignUp"
        android:textSize="18sp"
        android:textStyle="normal"></EditText>

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editrecov"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:background="@drawable/btnstyle"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:onClick="recoverpass"
        android:text="REQUEST"
        android:textColor="@color/white"
        android:textSize="19sp"
        android:textStyle="bold"></Button>

</RelativeLayout>